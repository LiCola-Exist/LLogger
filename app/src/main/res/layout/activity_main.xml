    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClickLogA"
    android:text="log-a" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClickLogJson"
    android:text="log-json" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClickLogTrace"
    android:text="log-trace" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:onClick="onClickLogInnerClass"
    android:text="log-inner-class" />

</LinearLayout>